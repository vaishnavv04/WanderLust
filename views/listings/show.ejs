<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <h2 class="mb-4 fw-bold text-center">Listing Details</h2>
            
            <div class="row">
                <div class="col-lg-8 col-md-12 mb-4">
                    <div class="card border-0 shadow-sm">
                        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="<%= listing.title %>">
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-12">
                    <div class="card border-0 shadow-sm listing-show-card h-100">
                        <div class="card-body p-4">
                            <h3 class="card-title fw-bold mb-3"><%= listing.title %></h3>
                            <p class="card-text text-muted mb-4"><%= listing.description %></p>
                            
                            <div class="listing-details">
                                <div class="detail-item mb-3">
                                    <span class="fw-semibold text-success">Price:</span>
                                    <span class="fs-5 fw-bold">â‚¹<%= listing.price.toLocaleString("en-IN") %></span>
                                    <span class="text-muted">/ night</span>
                                </div>
                                
                                <div class="detail-item mb-3">
                                    <span class="fw-semibold">Location:</span>
                                    <span><%= listing.location %></span>
                                </div>
                                
                                <div class="detail-item mb-4">
                                    <span class="fw-semibold">Country:</span>
                                    <span><%= listing.country %></span>
                                </div>
                            </div>
                            
                            <div class="action-buttons">
                                <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger me-2 mb-2">
                                    Edit
                                </a>
                                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
                                    <button class="btn btn-dark mb-2" onclick="return confirm('Are you sure you want to delete this listing?')">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <a href="/listings" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left me-2"></i>Back to All Listings
                </a>
            </div>
        </div>
    </div>
</div>
