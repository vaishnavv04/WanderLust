<% layout("/layouts/boilerplate") %>

<div class="container-fluid">
    <div class="row justify-content-center mt-4">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <h2 class="mb-4 fw-bold">Edit your Listing</h2>
            
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>
                <!-- Title -->
                <div class="mb-3">
                    <label for="title" class="form-label fw-semibold">Title</label>
                    <input type="text" class="form-control form-control-lg" id="title" name="listing[title]" value="<%= listing.title %>" required>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label for="description" class="form-label fw-semibold">Description</label>
                    <textarea class="form-control" id="description" name="listing[description]" rows="4" required><%= listing.description %></textarea>
                </div>

                <!-- Image URL -->
                <div class="mb-3">
                    <label for="image" class="form-label fw-semibold">Image Link</label>
                    <input type="url" class="form-control" id="image" name="listing[image]" value="<%= listing.image.url %>" required>
                </div>

                <!-- Price and Country Row -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="price" class="form-label fw-semibold">Price</label>
                        <input type="number" class="form-control" id="price" name="listing[price]" value="<%= listing.price %>" min="1" required>
                    </div>
                    <div class="col-md-6">
                        <label for="country" class="form-label fw-semibold">Country</label>
                        <input type="text" class="form-control" id="country" name="listing[country]" value="<%= listing.country %>" required>
                    </div>
                </div>

                <!-- Location -->
                <div class="mb-4">
                    <label for="location" class="form-label fw-semibold">Location</label>
                    <input type="text" class="form-control" id="location" name="listing[location]" value="<%= listing.location %>" required>
                </div>

                <!-- Submit Button -->
                <div class="mb-4">
                    <button type="submit" class="btn btn-danger fw-semibold px-4 py-2">
                        Edit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
